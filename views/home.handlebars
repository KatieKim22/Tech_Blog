<div class="mb-4">
    <h1>Tech Blog</h1>
    <p>Log in to post new articles or comments!</p>
</div>


{{!-- add for Each handlebars if exist--}}
<div class="mainPosts">

    {{#each post}}
    <a href="/api/post/{{this.dataValues.id}}">
        <div class="card">
            <div class="card-header">
                <h5>{{this.dataValues.title}}</h5>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>{{this.dataValues.content}}</p>
                    <footer class="blockquote-footer">{{this.dataValues.date_created}} {{this.dataValues.user_userName}}
                    </footer>
                </blockquote>
            </div>
        </div>
    </a>
    {{else}}
    <h2>There is no post</h2>
    {{/each}}
</div>