{{!-- show post--}}
<div class="mainPosts">

    <form action="/api/post/{{post.id}}" method="GET">
        <div class="card">
            <div class="card-header">
                {{post.dataValues.title}}
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>{{post.dataValues.content}}</p>
                    <footer class="blockquote-footer">{{post.dataValues.date_created}} {{post.dataValues.user_userName}}

                    </footer>
                </blockquote>
            </div>
        </div>
    </form>
</div>

{{!-- if user === user.session --}}
<div class="row ">
    <form action="/api/post/{{post.id}}" method="GET">
        <button type="submit" class="btn btn-outline-primary m-1">Edit</button>
    </form>
    {{!-- template for method override --}}
    <form action="/api/{{post.id}}" method="DELETE" class="d-inline">
        <button type="submit" class="btn btn-outline-primary m-1">Delete</button>
    </form>
    <form action="/" method="">
        <button type="submit" class="btn btn-outline-secondary m-1">Cancel</button>
    </form>
</div>
{{!-- comment box --}}
<div class="input-group mb-3">
    <span class="input-group-text">Add a new comment</span>
    <input type="text" class="form-control" placeholder="Add your comment" aria-label="comment"
        aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Submit</button>
</div>

{{!-- previous comments --}}

<form action="/api/post/{{post.id}}" method="GET">
    <div class="card">
        <div class="card-body">
            {{comment.dataValues.text}}
        </div>
    </div>
</form>